block variables
doctype html
html
  head
    meta(charset="utf-8")

    link(rel="shortcut icon", href="/favicon.ico")

    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")

    script(src="https://code.jquery.com/jquery-3.5.1.min.js")

    script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js", integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==", crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.31/moment-timezone-with-data.js", integrity="sha512-ECoTMVFwwVtxjEBRjUMjviUd6hBjwDhBJI0+3W2YDs+ld5rHHUDr59T15gxwEPkGu5XLmkASUSvPgQe/Tpyodg==", crossorigin="anonymous")

    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js")

    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css", integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==", crossorigin="anonymous")

    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")

    link(rel="stylesheet" href="/css/global.css")
    script(src="/js/global.js")

    script(src="/js/utils.js")

    block head-content

    title #{title} | A Journey for Wisdom
  body
    //- Background
    div.background
      //- Navbar
      nav.navbar.navbar-expand-lg.fixed-top.navbar-light.bg-light
        //- Navbar brand
        a.navbar-brand.d-none.d-lg-block(href='/dashboard')
          img.logo(alt='logo', src='/img/AJourneyForWisdom-logo-long-min.png', height=50)
        div.navbar-branding.text-black.text-small ver. 1.5.1
        div.collapse.navbar-collapse(id='navbarNavDropdown')
          //- If authorized
          if authorized
            //- Navbar items
            ul.navbar-nav.mt-2.mt-lg-0.ml-auto
              li.nav-item
                a.nav-link(href='/images') Images
              li.nav-item
                a.nav-link(href='/posts') Posts
              li.nav-item
                a.nav-link(href='/podcasts') Episodes
              li.nav-item
                a.nav-link(href='/recordings') Recordings
              li.nav-item
                a.nav-link(href='/tweets') Tweets
      //- Top spacer
      div.top-spacer
      //- Content container
      div.container.pb-3
        //- Notice modal
        div.modal.fade(id='notice', data-behavior='notice-modal', tabIndex='-1', role='dialog', aria-labelledby='noticeTitle', aria-hidden=true)
          div.modal-dialog.modal-dialog-centered(role='document')
            div.modal-content
              div.modal-body
              div.modal-footer
                button.btn.btn-primary(data-dismiss='modal') OK
        //- Confirm modal
        div.modal.fade(id='confirm', data-behavior='confirm-modal', tabIndex='-1', role='dialog', aria-labelledby='confirmTitle', aria-hidden=true)
          div.modal-dialog.modal-dialog-centered(role='document')
            div.modal-content
              div.modal-body
              div.modal-footer
                button.btn.btn-primary(data-dismiss='modal', data-behavior='confirmed') OK
                button.btn.btn-secondary(data-dismiss='modal') Cancel
        //- Content
        block layout-content
  //- Loading screen
  div.loading-screen.d-none(data-behavior='loading-screen')
