extends ../layout

block head-content
  link(rel="stylesheet" href="/css/tweets.css")
  script(src="/js/tweets.js")

block layout-content
  h1.mt-5.text-white.text-center Tweets
  br

  div.row
    a.btn.btn-sm.text-white.ml-auto(href='/tweets/new')
      i.fas.fa-plus.fa-2x
  each item in items
    div.row
      div.card.w-100.p-3
        div.card-text
          div.row.no-gutters
            div.col !{item.description}
          div.row.no-gutters
            div.col-auto
              form(action="/tweets/" + item.id + "/delete", method="post")
                input.btn.btn-sm.btn-danger(type="submit", value="delete")
            div.col.text-right
              small.text-muted #{item.date}