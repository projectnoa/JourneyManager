extends ../layout

block head-content
  link(rel="stylesheet" href="/css/posts.css")
  script(src="/js/posts.js")

  meta(name="page-id", content="posts")

block layout-content
  h1.mt-5.text-white.text-center Posts

  div.row.no-gutters
    div.col
      a.btn.btn-sm.text-white.float-right(href='/posts/new')
        i.fas.fa-plus.fa-2x
  if items.length > 0
    h6.text-white !{total} Posts published, page !{page}

    each item in items
      div.row
        div.card.w-100.p-3
          div.card-title
            b= item.title
          div.card-text= item.content
    br
    include ../pagination.pug