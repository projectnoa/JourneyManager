extends ../layout

block head-content
  script(src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.7.2/min/dropzone.min.js", integrity="sha512-9WciDs0XP20sojTJ9E7mChDXy6pcO0qHpwbEJID1YVavz2H6QBz5eLoDD8lseZOb2yGT8xDNIV7HIe1ZbuiDWg==", crossorigin="anonymous")
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.7.2/min/dropzone.min.css", integrity="sha512-bbUR1MeyQAnEuvdmss7V2LclMzO+R9BzRntEE57WIKInFVQjvX7l7QZSxjNDt8bg41Ww05oHSh0ycKFijqD7dA==", crossorigin="anonymous")
  
  link(rel="stylesheet" href="/css/images.css")
  script(src="/js/images.js")

  meta(name="page-id", content="images")

block layout-content
  //- Create collection modal 
  div.modal.fade(id='createCollection', data-behavior='create-collection-modal', tabIndex='-1', role='dialog', aria-labelledby='createCollectionTitle', aria-hidden=true)
    div.modal-dialog.modal-dialog-centered(role='document')
      div.modal-content
        div.modal-header
          div.modal-title Create a collection
        div.modal-body
          form(action="/images/create", method="post")
            div.form-group
              label(for="title") Title
              input.form-control(type="text", name="title", placeholder="Enter a collection title", required=true)
        div.modal-footer
          button.btn.btn-primary(data-dismiss='modal', data-behavior='submit') OK
          button.btn.btn-secondary(data-dismiss='modal') Cancel

  h1.mt-5.text-white.text-center Post Images
  br

  div.row.no-gutters
    div.col
      button.btn.btn-sm.text-white.float-right(type="button" data-toggle="modal" data-target="#createCollection")
        i.fas.fa-plus.fa-2x
  each item in items
    div.card
      div.card-header(id=`heading-${item.id}`)
        div.row.no-gutters
          div.col
            h3.float-left= item.title
            form(action=`/images/${item.id}/delete`, method="post", data-id=`collectionDelete-${item.id}`)
              input(type="hidden", name="id", value=item.id)
            i.fas.fa-trash.text-danger.m-2.pt-1(style='cursor: pointer;', data-behavior='display-confirm', data-target=`collectionDelete-${item.id}`, data-text='Are you sure you want to delete this collection? Make sure you have removed all images from all posts beforehand.')
          div.col-auto
            button.btn.btn-link.p-1.float-right(type='button', data-toggle='collapse', data-target=`#collapse-${item.id}`, aria-expanded='false', aria-controls=item.id)
              i.fas.fa-angle-down.fa-2x
      div.collapse(id=`collapse-${item.id}`, aria-labelledby=`heading-${item.id}`)
        div.card-body
          div.row.no-gutters.mb-3
            div.col
              div.card.dopzone
                div.card-body
                  div.post-images.image-upload.text-primary.font-weight-bold(data-behavior='post-images', data-title="Drop images here", data-id=item.id)
          div.card-columns
            each image in item.images
              div.card
                img.card-img-top(src=image.url, alt=image.title)
                div.card-body
                  div.card-text
                    small.text-muted= image.url
                    span.float-right
                      form(action=`/images/${item.id}/image/${image.id}/delete`, method="post", data-id=`imageDelete-${image.id}`)
                        input(type="hidden", name="collection_id", value=item.id)
                        input(type="hidden", name="id", value=image.id)
                        input(type="hidden", name="key", value=image.title)
                      i.fas.fa-trash.text-danger(style='cursor: pointer;', data-behavior='display-confirm', data-target=`imageDelete-${image.id}`, data-text='Are you sure you want to delete this image? Make sure you have removed it from all posts beforehand.')